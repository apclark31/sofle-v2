/ {
    behaviors {
        kp: behavior_kp {
            compatible = "zmk,behavior-key-press";
        };
        // --- Left Hand Home Row Mods ---
        hm_a_lctrl: behavior_hm_a_lctrl {
            compatible = "zmk,behavior-hold-tap";
            label = "HM_A_LCTRL";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp LCTRL &kp A>;
            hold-trigger-key-positions = <>;
        };
        
    
        // S: LALT on hold, S on tap
        hm_s_lalt: behavior_hm_s_lalt {
            compatible = "zmk,behavior-hold-tap";
            label = "HM_S_LALT";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp LALT &kp S>;
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

        // D: LGUI on hold, D on tap
        hm_d_lgui: behavior_hm_d_lgui {
            compatible = "zmk,behavior-hold-tap";
            label = "HM_D_LGUI";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp LGUI>, <&kp D>;
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

        // F: LSHFT on hold, F on tap
        hm_f_lshft: behavior_hm_f_lshft {
            compatible = "zmk,behavior-hold-tap";
            label = "HM_F_LSHFT";
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp LSHFT>, <&kp F>;
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

// --- Right Hand Home Row Mods (Corrected Symmetrical Mapping) ---

        // J: RSHFT on hold, J on tap (Mirrors F:LSHFT)
        hm_j_rshft: behavior_hm_j_rshft { // Renamed node and label
            compatible = "zmk,behavior-hold-tap";
            label = "HM_J_RSHFT"; // Renamed label
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp RSHFT>, <&kp J>; // CORRECTED BINDING
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

        // K: RGUI on hold, K on tap (Mirrors D:LGUI)
        hm_k_rgui: behavior_hm_k_rgui { // Renamed node and label
            compatible = "zmk,behavior-hold-tap";
            label = "HM_K_RGUI"; // Renamed label
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp RGUI>, <&kp K>; // CORRECTED BINDING
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

        // L: RALT on hold, L on tap (Mirrors S:LALT)
        hm_l_ralt: behavior_hm_l_ralt { // Renamed node and label
            compatible = "zmk,behavior-hold-tap";
            label = "HM_L_RALT"; // Renamed label
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp RALT>, <&kp L>; // CORRECTED BINDING
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        };

        // SEMI: RCTRL on hold, SEMI on tap (Mirrors A:LCTRL)
        hm_semi_rctrl: behavior_hm_semi_rctrl { // Renamed node and label
            compatible = "zmk,behavior-hold-tap";
            label = "HM_SEMI_RCTRL"; // Renamed label
            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            bindings = <&kp RCTRL>, <&kp SEMI>; // CORRECTED BINDING
            hold-trigger-key-positions = <>; // Timeless
            // hold-trigger-on-release;
        }; 

    }; // End of behaviors block 
    
